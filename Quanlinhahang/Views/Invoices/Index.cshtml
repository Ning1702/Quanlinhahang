@model IEnumerable<Quanlinhahang.Models.ViewModels.InvoiceRowVM>

<h2 class="mt-3">Danh sách hóa đơn</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-info">@TempData["msg"]</div>
}

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Ngày lập</th>
            <th>Khách hàng</th>
            <th>SĐT</th>
            <th class="text-end">Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Loại đặt bàn</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.HoaDonID</td>
                <td>@x.NgayLap.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@x.KhachHang</td>
                <td>@x.SoDienThoai</td>
                <td class="text-end">@x.TongTien.ToString("#,##0")</td>

                <td>
                    @if (x.TrangThaiThanhToan == "Đã thanh toán")
                    {
                        <span class="badge bg-success">Đã thanh toán</span>
                    }
                    else if (x.TrangThaiXacNhan == "Đã xác nhận")
                    {
                        <span class="badge bg-primary">Đã xác nhận</span>
                    }
                    else if (x.TrangThaiXacNhan == "Đã hủy")
                    {
                        <span class="badge bg-secondary">Đã hủy</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                    }
                </td>

                <td>
                    @if (x.LoaiDatBan == "Offline")
                    {
                        <span class="badge bg-dark">Offline</span>
                    }
                    else
                    {
                        <span class="badge bg-info">Online</span>
                    }
                </td>

                <td class="text-center">
                    @* 1. ĐÃ THANH TOÁN: Xem + In *@
                    @if (x.TrangThaiThanhToan == "Đã thanh toán")
                    {
                        <a asp-controller="Invoices" asp-action="Details"
                           asp-route-id="@x.HoaDonID"
                           class="btn btn-sm btn-info me-1">
                            <i class="bi bi-eye"></i> Xem
                        </a>
                        <a asp-controller="Invoices" asp-action="Print"
                           asp-route-id="@x.HoaDonID"
                           class="btn btn-sm btn-secondary">
                            <i class="bi bi-printer"></i> In
                        </a>
                    }
                    @* 2. ĐÃ XÁC NHẬN: Xem + Sửa + Hủy (KHÔNG Thanh toán) *@
                    else if (x.TrangThaiXacNhan == "Đã xác nhận")
                    {
                        <a asp-controller="Invoices" asp-action="Details"
                           asp-route-id="@x.HoaDonID"
                           class="btn btn-sm btn-info me-1">
                            <i class="bi bi-eye"></i> Xem
                        </a>

                        <a asp-controller="Invoices" asp-action="Edit"
                           asp-route-id="@x.HoaDonID"
                           class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>

                        <form asp-controller="Invoices"
                              asp-action="HuyHoaDon"
                              asp-route-id="@x.HoaDonID"
                              method="post"
                              style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-sm btn-danger"
                                    onclick="return confirm('Bạn có chắc chắn muốn hủy hóa đơn này?');">
                                <i class="bi bi-x-circle"></i> Hủy
                            </button>
                        </form>
                    }
                    @* 3. ĐÃ HỦY: chỉ cho xem *@
                    else if (x.TrangThaiXacNhan == "Đã hủy")
                    {
                        <a asp-controller="Invoices" asp-action="Details"
                           asp-route-id="@x.HoaDonID"
                           class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-eye"></i> Xem
                        </a>
                    }
                    @* 4. CHỜ XÁC NHẬN / CHƯA XÁC NHẬN:
                       Xem = chỉ xem các món khách đã đặt (Details),
                       + nút Xác nhận. Không Sửa, không Thanh toán, không In. *@
                    else
                    {
                        <a asp-controller="Invoices" asp-action="Details"
                           asp-route-id="@x.HoaDonID"
                           class="btn btn-sm btn-info me-1">
                            <i class="bi bi-eye"></i> Xem
                        </a>

                        <form asp-controller="Invoices"
                              asp-action="ConfirmInvoice"
                              asp-route-id="@x.HoaDonID"
                              method="post"
                              style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="bi bi-check-circle"></i> Xác nhận
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
