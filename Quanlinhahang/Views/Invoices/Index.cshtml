@model IEnumerable<Quanlinhahang.Models.ViewModels.InvoiceRowVM>
@using Quanlinhahang.Models.ViewModels

@{
    var currentStatus = ViewBag.Status as string ?? "";
    var filter = ViewBag.Filter as InvoiceFilterVM;
}

<h2 class="mt-3">Danh sách hóa đơn</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-info">@TempData["msg"]</div>
}

<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <a class="nav-link @(currentStatus == "" ? "active" : "")"
           asp-action="Index" asp-route-status="">Tất cả</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentStatus == "ChoXacNhan" ? "active" : "")"
           asp-action="Index" asp-route-status="ChoXacNhan">Chờ xác nhận</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentStatus == "DaXacNhan" ? "active" : "")"
           asp-action="Index" asp-route-status="DaXacNhan">Đã xác nhận</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentStatus == "DangPhucVu" ? "active" : "")"
           asp-action="Index" asp-route-status="DangPhucVu">Đang phục vụ</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentStatus == "DaThanhToan" ? "active" : "")"
           asp-action="Index" asp-route-status="DaThanhToan">Đã thanh toán</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(currentStatus == "DaHuy" ? "active" : "")"
           asp-action="Index" asp-route-status="DaHuy">Đã hủy</a>
    </li>
</ul>

<form asp-action="Index" method="get" class="mb-3">
    <input type="hidden" name="status" value="@currentStatus" />

    <div class="row g-2">
        <div class="col-md-4">
            <input type="text" name="Search" class="form-control" placeholder="Tìm khách hàng, SĐT..."
                   value="@(filter?.Search)" />
        </div>
        <div class="col-md-3">
            <input type="date" name="From" class="form-control"
                   value="@(filter?.From?.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-md-3">
            <input type="date" name="To" class="form-control"
                   value="@(filter?.To?.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Tìm</button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Ngày lập</th>
            <th>Khách hàng</th>
            <th>SĐT</th>
            <th class="text-end">Tổng tiền</th>
            <th>Trạng thái</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr id="invoice-row-@x.HoaDonID">
                <td>@x.HoaDonID</td>
                <td>@x.NgayLap.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@x.KhachHang</td>
                <td>@x.SoDienThoai</td>
                <td class="text-end">@x.TongTien.ToString("#,##0")</td>

                <td>
                    @if (x.TrangThai == "Đã thanh toán")
                    {
                        <span class="badge bg-success">Đã thanh toán</span>
                    }
                    else if (x.TrangThai == "Đang phục vụ")
                    {
                        <span class="badge bg-info">Đang phục vụ</span>
                    }
                    else if (x.TrangThai == "Đã xác nhận")
                    {
                        <span class="badge bg-primary">Đã xác nhận</span>
                    }
                    else if (x.TrangThai == "Đã hủy")
                    {
                        <span class="badge bg-secondary">Đã hủy</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                    }
                </td>

                <td class="text-center">

                    @* =========================
                       TẤT CẢ
                       ========================= *@

                    @if (currentStatus == "")
                    {
                        string targetStatus = x.TrangThai switch
                        {
                            "Đã thanh toán" => "DaThanhToan",
                            "Đã hủy" => "DaHuy",
                            "Đang phục vụ" => "DangPhucVu",
                            "Đã xác nhận" => "DaXacNhan",
                            _ => "ChoXacNhan"
                        };

                        <a asp-controller="Invoices" asp-action="Index"
                           asp-route-status="@targetStatus"
                           asp-route-highlight="@x.HoaDonID"
                           class="btn btn-sm btn-info">
                            Quản lý
                        </a>
                    }
                    else
                    {

                        @* ================================
                           ĐÃ THANH TOÁN
                           ================================ *@
                        if (x.TrangThai == "Đã thanh toán")
                        {
                            <a asp-controller="Invoices" asp-action="Details"
                               asp-route-id="@x.HoaDonID"
                               class="btn btn-sm btn-info me-1">Xem</a>

                            <a asp-controller="Invoices" asp-action="Print"
                               asp-route-id="@x.HoaDonID"
                               class="btn btn-sm btn-secondary">In</a>
                        }

                        @* ================================
                           ĐÃ XÁC NHẬN → PHỤC VỤ
                           ================================ *@
                        else if (x.TrangThai == "Đã xác nhận")
                        {
                            <form method="post"
                                  asp-controller="Invoices"
                                  asp-action="StartServing"
                                  asp-route-id="@x.HoaDonID"
                                  class="d-inline form-action"
                                  data-title="Phục vụ"
                                  data-message="Bắt đầu phục vụ hóa đơn này?">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-primary me-1">Phục vụ</button>
                            </form>

                            <a asp-controller="Invoices" asp-action="Edit"
                               asp-route-id="@x.HoaDonID"
                               class="btn btn-sm btn-warning me-1">Chi tiết</a>

                            <form method="post"
                                  asp-controller="Invoices"
                                  asp-action="HuyHoaDon"
                                  asp-route-id="@x.HoaDonID"
                                  class="d-inline form-action"
                                  data-title="Hủy hóa đơn"
                                  data-message="Bạn có chắc chắn muốn hủy hóa đơn này?">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-danger">Hủy</button>
                            </form>
                        }

                        @* ================================
                           ĐANG PHỤC VỤ → THANH TOÁN
                           ================================ *@
                        else if (x.TrangThai == "Đang phục vụ")
                        {
                            <form method="post"
                                  asp-controller="Invoices"
                                  asp-action="ThanhToan"
                                  asp-route-id="@x.HoaDonID"
                                  class="d-inline form-action"
                                  data-title="Thanh toán"
                                  data-message="Xác nhận thanh toán hóa đơn này?">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-success me-1">Thanh toán</button>
                            </form>

                            <a asp-controller="Invoices" asp-action="Edit"
                               asp-route-id="@x.HoaDonID"
                               class="btn btn-sm btn-warning me-1">Chi tiết</a>

                            <form method="post"
                                  asp-controller="Invoices"
                                  asp-action="HuyHoaDon"
                                  asp-route-id="@x.HoaDonID"
                                  class="d-inline form-action"
                                  data-title="Hủy hóa đơn"
                                  data-message="Bạn có chắc chắn muốn hủy hóa đơn này?">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-danger">Hủy</button>
                            </form>
                        }

                        @* ================================
                           ĐÃ HỦY
                           ================================ *@
                        else if (x.TrangThai == "Đã hủy")
                        {
                            <a asp-controller="Invoices" asp-action="Details"
                               asp-route-id="@x.HoaDonID"
                               class="btn btn-sm btn-info">Xem</a>
                        }

                        @* ================================
                           CHỜ XÁC NHẬN
                           ================================ *@
                        else
                        {
                            <a asp-controller="Invoices" asp-action="Edit"
                               asp-route-id="@x.HoaDonID"
                               class="btn btn-sm btn-warning me-1">Chi tiết</a>

                            <form method="post"
                                  asp-controller="Invoices"
                                  asp-action="ConfirmInvoice"
                                  asp-route-id="@x.HoaDonID"
                                  class="d-inline form-action"
                                  data-title="Xác nhận"
                                  data-message="Bạn có chắc muốn xác nhận hóa đơn này?">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-success me-1">Xác nhận</button>
                            </form>

                            <form method="post"
                                  asp-controller="Invoices"
                                  asp-action="HuyHoaDon"
                                  asp-route-id="@x.HoaDonID"
                                  class="d-inline form-action"
                                  data-title="Hủy hóa đơn"
                                  data-message="Bạn có chắc chắn muốn hủy hóa đơn này?">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-danger">Hủy</button>
                            </form>
                        }

                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <!-- Highlight effect -->
    <style>
        tr.row-highlight {
            background-color: #fff3cd !important;
            transition: background-color 1.5s ease-out;
        }
    </style>

    <script>
        // Tô màu highlight khi vừa điều hướng
        document.addEventListener("DOMContentLoaded", function () {
            const urlParams = new URLSearchParams(window.location.search);
            const highlightId = urlParams.get('highlight');

            if (highlightId) {
                const row = document.getElementById('invoice-row-' + highlightId);

                if (row) {
                    row.classList.add('row-highlight');
                    row.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    setTimeout(() => row.classList.remove('row-highlight'), 2000);
                }
            }
        });

        // SWEETALERT2 CHO TẤT CẢ FORM HÀNH ĐỘNG
        document.querySelectorAll(".form-action").forEach(form => {

            form.addEventListener("submit", function (e) {
                e.preventDefault(); // chặn submit mặc định

                let title = form.dataset.title;
                let message = form.dataset.message;

                Swal.fire({
                    icon: "warning",
                    title: title,
                    text: message,
                    showCancelButton: true,
                    confirmButtonText: "Xác nhận",
                    cancelButtonText: "Hủy",
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33"
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit(); // tiếp tục submit
                    }
                });
            });

        });
    </script>
}
